# Example environment file (NO SECRETS). Copy to .env and fill for your environment.

# Admin bootstrap (use scripts/bootstrap-admin.js preferred)
ADMIN_EMAIL=
ADMIN_PASSWORD_PLAIN=
ADMIN_NAME=

# JWT
JWT_SECRET=
REFRESH_TOKEN_SECRET=
ACCESS_TOKEN_HASH_SECRET=
REFRESH_TOKEN_HASH_SECRET=
JWT_ALG=HS256
JWT_ISSUER=
JWT_AUDIENCE=

# Auth security
REFRESH_TOKEN_BIND_UA=false
REFRESH_TOKEN_BIND_IP=false
ALLOW_PLAINTEXT_PASSWORD_RESPONSE=false

# CORS / Public
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173
CORS_ALLOW_ALL=false
PUBLIC_ORIGIN=http://127.0.0.1:5173
# For Render use TRUST_PROXY=true (string is supported safely by server bootstrap)
TRUST_PROXY=loopback
FORCE_HTTPS=false

# PostgreSQL
DATABASE_URL=
PGHOST=127.0.0.1
PGPORT=5432
PGDATABASE=systemgestion
PGUSER=postgres
PGPASSWORD=
PGSSL=false

# SMTP / SendGrid (optional)
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM_NAME=
SMTP_FROM_EMAIL=
SENDGRID_API_KEY=
SENDGRID_FROM_NAME=
SENDGRID_FROM_EMAIL=

# Alerts
ALERT_PHONE=
ALARM_EVAL_INTERVAL_MS=300000
ALARM_QUEUE_INTERVAL_MS=30000

# AI Python service
LOCAL_AI_URL=http://localhost:8000
AI_PY_FORECAST=false
AI_PY_PRICING=false
AI_PY_TIMEOUT_MS=5000

# LLM providers
AI_LLM_ENABLED=false
AI_PROVIDER_ORDER=openai,gemini,deepseek,local
AI_TIMEOUT_MS=15000
OPENAI_API_KEY=
GEMINI_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEK_CHAT_COMPLETIONS_URL=
